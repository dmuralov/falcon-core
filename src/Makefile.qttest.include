bin_PROGRAMS += qt/test/test_falcon-qt
TESTS += qt/test/test_falcon-qt

TEST_QT_MOC_CPP = \
  qt/test/moc_apptests.cpp \
  qt/test/moc_rpcnestedtests.cpp \
  qt/test/moc_uritests.cpp

if ENABLE_WALLET
TEST_QT_MOC_CPP += \
  qt/test/moc_addressbooktests.cpp \
  qt/test/moc_wallettests.cpp
endif # ENABLE_WALLET

TEST_QT_H = \
  qt/test/addressbooktests.h \
  qt/test/apptests.h \
  qt/test/rpcnestedtests.h \
  qt/test/uritests.h \
  qt/test/util.h \
  qt/test/wallettests.h

qt_test_test_falcon_qt_CPPFLAGS = $(AM_CPPFLAGS) $(BITCOIN_INCLUDES) $(BITCOIN_QT_INCLUDES) \
  $(QT_INCLUDES) $(QT_TEST_INCLUDES) $(PROTOBUF_CFLAGS)

qt_test_test_falcon_qt_SOURCES = \
  qt/test/apptests.cpp \
  qt/test/rpcnestedtests.cpp \
  qt/test/test_main.cpp \
  qt/test/uritests.cpp \
  qt/test/util.cpp \
  $(TEST_QT_H)
if ENABLE_WALLET
qt_test_test_falcon_qt_SOURCES += \
  qt/test/addressbooktests.cpp \
  qt/test/wallettests.cpp \
  wallet/test/wallet_test_fixture.cpp
endif # ENABLE_WALLET

nodist_qt_test_test_falcon_qt_SOURCES = $(TEST_QT_MOC_CPP)

qt_test_test_falcon_qt_DEPENDENCIES = $(LIBFALCONQT) $(LIBFALCON_SERVER) $(LIBTEST_UTIL)
qt_test_test_falcon_qt_LDADD = $(LIBFALCONQT) $(LIBFALCON_SERVER) $(LIBTEST_UTIL)
if ENABLE_WALLET
qt_test_test_falcon_qt_LDADD += $(LIBFALCON_UTIL) $(LIBFALCON_WALLET)
qt_test_test_falcon_qt_DEPENDENCIES += $(LIBFALCON_WALLET)
endif
if ENABLE_ZMQ
qt_test_test_falcon_qt_LDADD += $(LIBFALCON_ZMQ) $(ZMQ_LIBS)
endif
if ENABLE_USBDEVICE
qt_test_test_falcon_qt_LDADD += $(LIBFALCON_USBDEVICE) $(USB_LIBS) $(HIDAPI_LIBS) $(PROTOBUF_LIBS)
endif
qt_test_test_falcon_qt_LDADD += $(LIBFALCON_CLI) $(LIBFALCON_COMMON) $(LIBFALCON_UTIL) $(LIBFALCON_CONSENSUS) $(LIBFALCON_CRYPTO) $(LIBFALCON_SMSG) $(LIBFALCON_MNEMONIC) $(LIBUNIVALUE) $(LIBLEVELDB) \
  $(LIBLEVELDB_SSE42) $(LIBMEMENV) $(BOOST_LIBS) $(QT_DBUS_LIBS) $(QT_TEST_LIBS) $(QT_LIBS) \
  $(QR_LIBS) $(BDB_LIBS) $(MINIUPNPC_LIBS) $(NATPMP_LIBS) $(LIBSECP256K1) \
  $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS) $(SQLITE_LIBS)
qt_test_test_falcon_qt_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(QT_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) $(PTHREAD_FLAGS)
qt_test_test_falcon_qt_CXXFLAGS = $(AM_CXXFLAGS) $(QT_PIE_FLAGS)

CLEAN_BITCOIN_QT_TEST = $(TEST_QT_MOC_CPP) qt/test/*.gcda qt/test/*.gcno

CLEANFILES += $(CLEAN_BITCOIN_QT_TEST)

test_falcon_qt : qt/test/test_falcon-qt$(EXEEXT)

test_falcon_qt_check : qt/test/test_falcon-qt$(EXEEXT) FORCE
	$(MAKE) check-TESTS TESTS=$^

test_falcon_qt_clean: FORCE
	rm -f $(CLEAN_BITCOIN_QT_TEST) $(qt_test_test_bitcoin_qt_OBJECTS)
